<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.modelingbrain.home">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
            android:allowBackup="true"
            android:fullBackupContent="true"
            android:icon="@drawable/ic_launcher"
            android:label="@string/app_name"
            android:supportsRtl="false"
            android:theme="@style/AppTheme">
        <activity
                android:name=".MainActivity"
                android:label="@string/app_name"
                android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".detailModel.DetailActivity"
                android:label="@string/title_activity_detail"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:name=".chooseModel.ActivityChooseModel"
                android:label="@string/title_activity_detail"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:name=".about.ActivityAbout"
                android:label="@string/title_activity_about"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:name=".opensave.OpenActivity"
                android:label="@string/title_activity_open"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:name=".opensave.SaveActivity"
                android:label="@string/title_activity_save"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>